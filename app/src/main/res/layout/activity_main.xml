<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_login"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/museo_slab"
        android:onClick="loginActivity"
        android:padding="10dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/primary_darker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_registrazione"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginBottom="120dp"
        android:onClick="registerActivity"
        android:text="@string/signup"
        android:textAlignment="center"
        android:textColor="@color/primary_darker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/top_cereali"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginBottom="404dp"
        android:contentDescription="@string/main_top_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_top_cover" />

    <ImageView
        android:id="@+id/giangusto_title"
        android:layout_width="309dp"
        android:layout_height="144dp"
        android:layout_marginTop="116dp"
        android:contentDescription="@string/main_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/main_title" />

</android.support.constraint.ConstraintLayout>